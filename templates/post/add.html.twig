{% extends "base.html.twig" %}

{% block body %}
    <style>
        input, label {
            display:block;
        }
    </style>
    <h1>Add a post</h1>

    <form action="" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" value="{{ post.title|default('') }}">
        </div>
        <label for="content">Content</label>
        <textarea name="content" cols="16" rows="10">{{ post.content|default('') }} </textarea>
        <div>
            <button>Add</button>
        </div>
    </form>

{% endblock %}