{% extends "base.html.twig" %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

    <h1>App blog</h1>
    {% if app.user %}
        <a href="{{ path('logout') }}">Logout</a>
    {% endif %}
    {% include "search/index.html.twig" %}
    <ul>

        {% for post in posts %}
            <li><a href="{{ path('post_read', { 'id' : post.id }) }}">{{ post.title }}</a>
                    <a href="{{ path('post_edit', { 'id' : post.id }) }}">Edit</a>
                    <a href="{{ path('post_delete', { 'id' : post.id }) }}">Delete</a></li>
        {% endfor %}
    </ul>

    <p><a href="{{ path('post_add') }}">add a new post</a></p>
    {% if not app.user %}
    <p><a href="{{ path('login') }}">Login with (admin:0000)</a></p>
    {% endif %}
{% endblock %}
